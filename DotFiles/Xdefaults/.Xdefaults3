! dirty moss


URxvt.colorBD: #F4D6F0
URxvt.colorIR: #F4D6F0
URxvt.colorUL: #F4D6F0
URxvt.highlightColor: #ADA6FE
URxvt.highlightTextColor: #5C1767
!URxvt.borderColor: #F4D6F0


!!font
URxvt.depth: 32
URxvt.foreground: #F79BEC
URxvt.borderColor: [75]#3c3147
URxvt.background: [75]#3c3147
!URxvt.background: [60]#3e261f
!URxvt.borderColor: [60]#3e261f
URxvt.buffered: true

!! PERL STUFF
URxvt.perl-ext-common:  default,matcher,vtwheel,font-size
URxvt.url-launcher:     /usr/bin/chromium
URxvt.matcher.button:   1

!! CLIPBOARD
!URxvt.keysym.C-c:   perl:clipboard:copy
!URxvt.keysym.C-v:   perl:clipboard:paste
!URxvt.keysym.C-S-v: perl:clipboard:paste_escaped
!URxvt.clipboard.autocopy: true
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard


!! FONT SIZE
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

!! Annoying ctrl-shft popup
URxvt.iso14755: false
URxvt.iso14755_52: false
